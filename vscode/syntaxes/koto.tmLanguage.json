{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ヿ",
  "scopeName": "source.koto",
  "repository": {},
  "patterns": [
    {
      "match": "#.*$",
      "name": "comment.line.koto"
    },
    {
      "match": "\\b(?:let|fun|if|then|else)\\b|[:=→,@]",
      "name": "keyword.koto"
    },
    {
      "match": "\\b(?:type|bool|false|true|int64|float64)\\b",
      "name": "constant.language.koto"
    },
    {
      "match": "-?[0-9.]+",
      "name": "constant.numeric.koto"
    },
    {
      "match": "[a-z0-9.-]+",
      "name": "variable.koto"
    }
  ]
}
